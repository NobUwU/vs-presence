{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"declaration": false,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "ES2019",
		"module": "commonjs",
		"lib": ["ESNext"],
		"outDir": "out",
		"sourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out"
  ],
}